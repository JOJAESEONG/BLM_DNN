    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,500,600,700%7cPoppins:300,400,500,600,700,800,900&amp;display=swap" rel="stylesheet">
    <link href="../../../vendors/simplebar/simplebar.min.css" rel="stylesheet">
    <link href="../../../assets/css/theme-rtl.min.css" rel="stylesheet" id="style-rtl">
    <link href="../../../assets/css/theme.min.css" rel="stylesheet" id="style-default">
    <link href="../../../assets/css/user-rtl.min.css" rel="stylesheet" id="user-style-rtl">
    <link href="../../../assets/css/user.min.css" rel="stylesheet" id="user-style-default">
    <script>
      var isRTL = JSON.parse(localStorage.getItem('isRTL'));
      if (isRTL) {
        var linkDefault = document.getElementById('style-default');
        var userLinkDefault = document.getElementById('user-style-default');
        linkDefault.setAttribute('disabled', true);
        userLinkDefault.setAttribute('disabled', true);
        document.querySelector('html').setAttribute('dir', 'rtl');
      } else {
        var linkRTL = document.getElementById('style-rtl');
        var userLinkRTL = document.getElementById('user-style-rtl');
        linkRTL.setAttribute('disabled', true);
        userLinkRTL.setAttribute('disabled', true);
      }
    </script>
  </head>


  <body>

    <!-- ===============================================-->
    <!--    Main Content-->
    <!-- ===============================================-->
    <main class="main" id="top">
      <div class="container-fluid">
        <div class="row min-vh-100 flex-center g-0">
          <div class="col-lg-8 col-xxl-5 py-3 position-relative"><img class="bg-auth-circle-shape" src="../../../assets/img/icons/spot-illustrations/bg-shape.png" alt="" width="250"><img class="bg-auth-circle-shape-2" src="../../../assets/img/icons/spot-illustrations/shape-1.png" alt="" width="150">
            <div class="card overflow-hidden z-index-1">
              <div class="card-body p-0">
                <div class="row g-100 h-100">
                  <div class="col-md-5 text-center bg-card-gradient">
                    <div class="position-relative p-4 pt-md-5 pb-md-7 light">
                      <div class="bg-holder bg-auth-card-shape" style="background-image:url(../../../assets/img/icons/spot-illustrations/half-circle.png);">
                      </div>
                      <!--/.bg-holder-->

                      <div class="z-index-1 position-relative"><a class="link-light mb-4 font-sans-serif fs-4 d-inline-block fw-bolder" href="/auth/login"></br></br></br>EH R&C</a>
                        <p class="opacity-75 text-white">An independent scientific consultancy on the global issues of environmental health and ecosystem</p>
                      </div>
                    </div>
                    <div class="mt-3 mb-4 mt-md-4 mb-md-5 light">
                      <p class="pt-3 text-white">Have an account?<br><a class="btn btn-outline-light mt-2 px-4" href="/auth/login">Log In</a></p>
                    </div>
                  </div>
                  <div class="col-md-7 d-flex flex-center">
                    <div class="p-4 p-md-5 flex-grow-1">
                      <h3>Register</h3>
                      </br>
                      <form class="row g-3 needs-validation" novalidate="" action="/auth/register_process" method="post">
                        <div class="mb-3">
                          <label class="form-label" for="card-name">Email</label>
                          <input class="form-control" type="email" name="username" placeholder="University or Corporation E-mail" required=""/>
                          <div class="invalid-feedback">Please choose a Email.</div>
                        </div>
                        <div class="row gx-2">
                          <div class="mb-3 col-sm-6">
                            <label class="form-label" for="card-password">Password</label>
                            <input class="form-control" name="pwd" type="password" autocomplete="on" id="card-password" required=""/>
                            <div class="invalid-feedback">Please choose a password.</div>
                          </div>
                          <div class="mb-3 col-sm-6">
                            <label class="form-label" for="card-confirm-password">Confirm Password</label>
                            <input class="form-control" name="pwd2" type="password" autocomplete="on" id="card-confirm-password" required="" />
                            <div class="invalid-feedback">Please choose a password.</div>
                          </div>
                        </div>
                        <div class="mb-3">
                          <label class="form-label" for="card-email">Affiliation</label>
                          <input class="form-control" type="text" name="affi" autocomplete="on" id="card-email" placeholder="Affiliation" required="" />
                          <div class="invalid-feedback">Please choose a Affiliation.</div>
                        </div>
                        <div class="mb-3">
                          <label class="form-label" for="card-email">Country</label>
                          <input class="form-control" type="text" name="count" autocomplete="on" id="card-email" placeholder="Country" required="" />
                          <div class="invalid-feedback">Please choose a Country.</div>
                        </div>
                        <div class="mb-3">
                          <label  for="inlineFormInputName"><span style="font-size: 1.3em;">Sector</span></label>
                          <p><select class="form-select js-choice" name="sect" required="">
                              <option value=""></option>
                              <option value="Government">Government</option>
                              <option value="Industry">Industry</option>
                              <option value="Consultancy">Consultancy</option>
                              <option value="Academia">Academia</option>
                              <option value="Other">Other</option>
                          </select></p>
                          <div class="invalid-feedback">Please choose a Sector.</div>
                        </div>
                        <div class="form-check">
                          <input class="form-check-input" id="flexCheckIndeterminate" type="checkbox" value="" required="" />
                          <label class="form-check-label" for="flexCheckIndeterminate">By creating an account, I agree the website Disclaimer and Privacy Policy.
                          </label>
                          <div class="invalid-feedback mt-0">You must agree before submitting.</div>
                        </div>
                        <div class="mb-3">
                          <button class="btn btn-primary d-block w-100 mt-3" type="submit" name="submit">Register</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
